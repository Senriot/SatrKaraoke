<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lights_popover_background"
        android:paddingLeft="10dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnHuanHu"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:gravity="bottom|center"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_cheer"/>

            <ImageButton
                android:id="@+id/btnGuZhang"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:gravity="bottom|center"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_applause"/>

            <ImageButton
                android:id="@+id/btnDaoCai"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:gravity="bottom|center"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_boo"/>

            <ImageButton
                android:id="@+id/btnKouShao"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:gravity="bottom|center"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_whistling"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/b_miss"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttons"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/button_pop_close"/>
    </RelativeLayout>
</layout>