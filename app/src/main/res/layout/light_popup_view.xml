<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lights_popover_background"
        android:paddingLeft="10dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b_wenxin"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:src="@drawable/lights_pop_wenxin"/>

            <ImageButton
                android:id="@+id/b_mingliang"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:src="@drawable/lights_pop_mingliang"/>

            <ImageButton
                android:id="@+id/b_donggan"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:src="@drawable/lights_pop_donggan"/>

            <ImageButton
                android:id="@+id/b_close"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@android:color/transparent"
                android:src="@drawable/lights_pop_offall"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/b_miss"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttons"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/button_pop_close"/>
    </RelativeLayout>
</layout>