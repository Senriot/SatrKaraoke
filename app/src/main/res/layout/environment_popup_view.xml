<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/environment_popup_background"
        android:paddingLeft="10dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDaBa"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@drawable/environment_button_background"
                android:src="@drawable/ic_environment_daba_normal"/>

            <ImageButton
                android:id="@+id/btnHuoChe"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@drawable/environment_button_background"
                android:src="@drawable/ic_environment_huoche_normal"/>

            <ImageButton
                android:id="@+id/btnJiChang"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@drawable/environment_button_background"
                android:src="@drawable/ic_environment_jichang_normal"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/b_miss"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttons"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/button_pop_close"/>
    </RelativeLayout>
</layout>